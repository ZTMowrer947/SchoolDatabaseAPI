{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./src/**/__tests__/**/*",
    "**/*.spec.*",
    "**/*.test.*",
    "**/__mocks__/**/*",
    "./src/testSetup.ts",
    "./src/utils/testing/**/*"
  ]
}
